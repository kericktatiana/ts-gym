// this file may need to be broken up in the future

.home__wrapper
	flexbox()
	flex-direction(column)
	width 100%
	
.header__wrapper
	align-items(center)
	background rgba(0, 0, 0, 0.5)
	flexbox()
	flex-direction(column)
	justify-content(center)
	padding 100px 0
	position relative 
	width 100%

.header__background-img
	background url('../images/filler-img/header.jpeg') center center
	background-size 100%
	height 550px
	left 0
	vendor(filter, blur(3px))
	position absolute
	right 0
	width 100%
	

.welcome__text--sm
	color $white
	font 70px $bold
	letter-spacing 0.1em	
	line-height 60px
	text-transform uppercase
	
	-webkit-text-stroke-width 2px
	-moz-text-stroke-width 2px
	-ms-text-stroke-width 2px
	text-stroke-width 2px
	-webkit-text-stroke-color $black
	-moz-text-stroke-color $black
	-ms-text-stroke-color $black
	text-stroke-color $black
	
.welcome__text--lg
	color $white
	font 180px $bold
	line-height 170px
	letter-spacing 0.032em
	margin-bottom 30px
	text-transform uppercase
	
	-webkit-text-stroke-width 2px
	-moz-text-stroke-width 2px
	-ms-text-stroke-width 2px
	text-stroke-width 2px
	-webkit-text-stroke-color $black
	-moz-text-stroke-color $black
	-ms-text-stroke-color $black
	text-stroke-color $black
	
.welcome__intro-wrapper
	align-items(center)
	background $grey30
	flexbox()
	justify-content(center)
	padding 10px 0 
	width 100%
.welcome__intro
	color $white
	font 16px $semibold
	letter-spacing 0.023em
	text-align center
	width 60%
	
	



